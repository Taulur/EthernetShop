<Page x:Class="EthernetShop.Pages.CategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EthernetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      Title="CategoryPage">

    <StackPanel HorizontalAlignment="Center">
        <Label>Просмотр категорий</Label>
        <StackPanel Orientation="Horizontal">
            <Button Click="add">Добавить</Button>
            <Button Click="remove">Удалить</Button>
            <Button Click="back">Назад</Button>
        </StackPanel>
        <ListView ItemsSource="{Binding service.Categories}"
    MouseDoubleClick="edit" SelectedItem="{Binding current}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel >
                        <TextBlock Text="{Binding Id}"/>
                        <TextBlock Text="{Binding Name}"/>
                    </StackPanel>

                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</Page>
