<Page x:Class="EthernetShop.Pages.MainPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EthernetShop.Pages"
     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
 mc:Ignorable="d"
 DataContext="{Binding RelativeSource={RelativeSource Self}}"
      d:DesignHeight="500" d:DesignWidth="800"
      Title="MainPage" >
    <StackPanel>
        <Label Margin="5" HorizontalAlignment="Center" FontSize="20" Content="Просмотр товаров"></Label>
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Click="brand" Content="Бренды"/>
            <Button Click="category" Content="Категории"/>
            <Button Click="tag" Content="Тэги"/>
            <Button Content="Продукты"/>
        </StackPanel>
        <Grid Margin="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="325"/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

            <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <Label>Поиск</Label>
                <TextBox TextChanged="TextBox_TextChanged" Text="{Binding searchQuery, UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Введите текст для поиска"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Grid.Column="0">
                <Label FontSize="16">Сортировка</Label>
                <ComboBox SelectionChanged="ComboBox_SelectionChanged">
                    <ComboBox.Items >
                        <ComboBoxItem Tag="Name">По наименованию</ComboBoxItem>
                        <ComboBoxItem Tag="Price">По цене</ComboBoxItem>
                        <ComboBoxItem Tag="Stock">По количеству</ComboBoxItem>
                    </ComboBox.Items>
                </ComboBox>
                <Label>Фильтры</Label>
                <TabControl x:Name="filters">
                    <TabItem x:Name="Category">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="1">Категории</TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel>
                                <RadioButton Checked="RadioButton_Checked" IsChecked="{Binding Path=CategoryModeArray[0]}">Смартфоны</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked"   IsChecked="{Binding Path=CategoryModeArray[1]}">Ноутбуки</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked"   IsChecked="{Binding Path=CategoryModeArray[2]}">Акссесуары</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked"    IsChecked="{Binding Path=CategoryModeArray[3]}">Планшеты</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked"   IsChecked="{Binding Path=CategoryModeArray[4]}">Телевизоры</RadioButton>
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem x:Name="Brands">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">

                                <TextBlock Margin="1">Бренды</TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel>
                                <RadioButton  Checked="RadioButton_Checked" IsChecked="{Binding Path=BrandModeArray[0], Mode=TwoWay}">Samsung</RadioButton>
                                <RadioButton   Checked="RadioButton_Checked" IsChecked="{Binding Path=BrandModeArray[1]}">Apple</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked" IsChecked="{Binding Path=BrandModeArray[2]}">Sony</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked" IsChecked="{Binding Path=BrandModeArray[3]}">Lenovo</RadioButton>
                                <RadioButton  Checked="RadioButton_Checked" IsChecked="{Binding Path=BrandModeArray[4]}">Xiaomi</RadioButton>
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem  x:Name="Price">
                        <TabItem.Header>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Margin="1">Цена</TextBlock>
                            </StackPanel>
                        </TabItem.Header>
                        <TabItem.Content>
                            <StackPanel>
                                <Label>От</Label>
                                <TextBox Text="{Binding filterPriceFrom,UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Введите цену" TextChanged="TextBox_TextChanged" />
                                <Label>До</Label>
                                <TextBox Text="{Binding filterPriceTo,UpdateSourceTrigger=PropertyChanged}" materialDesign:HintAssist.Hint="Введите цену" TextChanged="TextBox_TextChanged" />
                            </StackPanel>
                        </TabItem.Content>
                    </TabItem>
                </TabControl>

                <Button Click="Button_Click" Margin="5">Сбросить</Button>
            </StackPanel>
            <materialDesign:ColorZone Grid.Row="1" Grid.Column="1" Mode="SecondaryMid">
                <ListView Margin="5" Height="325" ItemsSource="{Binding products}" Name="FormsList" HorizontalContentAlignment="Stretch">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock FontSize="15" Text="{Binding Name}"/>
                                    <TextBlock>
                                    <Run Text="★"/>
                                    <Run Text="Рейтинг "/>
                                    <Run Text="{Binding Rating}"/>
                                    </TextBlock>
                                    <TextBlock>
                                    <Run Text="Описание "/>
                                    <Run Text="{Binding Description}"/>
                                    </TextBlock>
                                    <ItemsControl ItemsSource="{Binding Tags}">
                                        <ItemsControl.ItemTemplate>
                                            <DataTemplate>
                                                <TextBlock Padding="1">
                                                    <Run Text="#"/>
                                                    <Run Text="{Binding Name}"/>
                                                </TextBlock>
                                            </DataTemplate>
                                        </ItemsControl.ItemTemplate>
                                        <ItemsControl.ItemsPanel>
                                            <ItemsPanelTemplate>
                                                <WrapPanel></WrapPanel>
                                            </ItemsPanelTemplate>
                                        </ItemsControl.ItemsPanel>
                                    </ItemsControl>
                                </StackPanel>
                                <StackPanel Grid.Column="1">
                                    <TextBlock HorizontalAlignment="Right">
                                    <Run Text="Цена "/>
                                    
                                    <Run Text="{Binding Price}"/>
                                    </TextBlock>
                                    <TextBlock HorizontalAlignment="Right"><Run Text="Остаток "/>
                                    <Run Text="{Binding Stock}"/>
                                    </TextBlock>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </materialDesign:ColorZone>
            <WrapPanel Grid.Row="2" Grid.ColumnSpan="2">


            </WrapPanel>
        </Grid>
    </StackPanel>
   
</Page>
