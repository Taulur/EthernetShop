<Page x:Class="EthernetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EthernetShop.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="LoginPage">

    <StackPanel>
        <Label>Вход в интернет магазин</Label>
        <TextBlock>Введите пароль для входа как администратор</TextBlock>
        <TextBox x:Name="Password"></TextBox>
        <Button Click="admin">Войти</Button>
        <Button Click="guest">Гость</Button>
        
    </StackPanel>
</Page>
