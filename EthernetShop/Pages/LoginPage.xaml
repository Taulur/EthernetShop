<Page x:Class="EthernetShop.Pages.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EthernetShop.Pages"
      xmlns:validators="clr-namespace:BindingCollections.ValidationRules"
      DataContext="{Binding RelativeSource={RelativeSource Self}}"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Вход">

    <StackPanel>
        <Label FontSize="25">Авторизация</Label>
        <TextBlock>Вход в интернет магазин</TextBlock>
        <TextBlock>Введите пароль для входа как администратор</TextBlock>
        <PasswordBox x:Name="passwordBox"/>
        <Button Click="admin">Войти</Button>
        <Button Click="guest">Гость</Button>
        
    </StackPanel>
</Page>
