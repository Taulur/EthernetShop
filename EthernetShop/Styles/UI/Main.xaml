<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style TargetType="Button" BasedOn="{StaticResource MaterialDesignFlatButton}">
        <Setter Property="Background" Value="{StaticResource MainAccent}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="Width" Value="125"/>
        <Setter Property="Height" Value="25"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
        <Setter Property="VerticalAlignment" Value="Center"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Button">
                    <Border x:Name="border"
                        Background="{TemplateBinding Background}"
                        Padding="{TemplateBinding Padding}"
                        CornerRadius="5">
                        <ContentPresenter HorizontalAlignment="Center"
                                      VerticalAlignment="Center"/>
                    </Border>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="border" Property="Background" Value="{DynamicResource AddAccent}"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
        <Setter Property="Margin" Value="3"/>
    </Style>

    <Style TargetType="TabItem">
        <Setter Property="Background" Value="{DynamicResource SecondAccent}"/>
       
    </Style>

    <Style TargetType="Label">
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="FontSize" Value="20"/>
    </Style>

    <Style TargetType="Page">
        <Setter Property="Background" Value="{DynamicResource MainBackground}"/>

    </Style>

    <Style TargetType="Frame">
        <Setter Property="Background" Value="{DynamicResource MainBackground}"/>

    </Style>

    <Style TargetType="TextBox">
        <Setter Property="Width" Value="150"/>

    </Style>

    <Style TargetType="TextBlock">
        <Setter Property="Foreground" Value="Black"/>
    </Style>

    <Style TargetType="Border" x:Key="Stock">
        <Setter Property="BorderThickness" Value="4"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="15"/>
    </Style>


    <Style TargetType="ListView">
        <Setter Property="Background" Value="{DynamicResource MainAccent}"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Width" Value="400"/>
        <Setter Property="Height" Value="300"/>
        <Setter Property="Padding" Value="5"/>
    </Style>



    <Style TargetType="WrapPanel">
        <Setter Property="Background" Value="{StaticResource MainBackground}"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Center"/>
    </Style>

</ResourceDictionary>